    <div class="container form-container">
        <form id="form" class="form">
            <h2>Register</h2>
            <div class="form-controller">
                <label for="username">Name</label>
                <input type="text" id="username" placeholder="Your Name">
            </div>
            <div class="form-controller">
                <label for="weight">Email</label>
                <input type="email" id="weight" placeholder="Your Email">
            </div>
            <div class="form-controller">
                <label for="height">Password</label>
                <input type="password" id="height" placeholder="Your Password">
            </div>  
            <div class="form-controller">
                <label for="height">Confirm Password</label>
                <input type="password" id="height" placeholder="Your Password again">
            </div>        
            <div class="form-controller">
                <p class="result" id="result"></p>
            </div>
            <button id="btn">Submit</button>
            <button id="btn">Register</button>
        </form>
    </div>


