<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bug Tracker</title>
    <link rel="icon" href="./Asset/favicon.ico">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
        integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <link rel="stylesheet" href="../styles/main.css">
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand title" href="/">Bug Tracker</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/#about-2">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/#team">Team</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/#contact">Contact Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/signup">Signup</a>
                    </li>
                    <li class="nav-item login-item">
                        <a href="/login" class="nav-link"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                                <path
                                    d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z" />
                            </svg> Login</a>
                    </li>
            </div>
        </div>
    </nav>
    <!-- End of navbar -->

    <!-- hello user heading -->
    <div class="container hello-heading">
        <h1 class="helloheading">Hello, welcome to Bug Tracker</h1>
    </div>
    <!-- heading ends -->

    <!-- add bug button -->
    <form action="/logout" method="POST">
        <div class="container logout-button">
            <button type="submit" class="btn addbug-btn">Logout</button>
        </div>
    </form>
    <!-- button ends -->

    <div class="container" style="text-align: center;">
        <form action="/add" id="userForm" method="POST" style="display: block;">
            <label style="display: block;" for="name" id="form-label">Project</label>
            <input type="text" placeholder="Enter Project Name" id="form-input" name="item[name]" required>
            <label style="display: block;" for="age" id="form-label">Sr. No.</label>
            <input type="number" placeholder="Enter Sr. No." id="form-input" name="item[number]" required>
            <label style="display: block;" for="blood-group" id="form-label">Bug</label>
            <input type="text" placeholder="Enter Bug" name="item[bug]" required>
            <label style="display: block;" for="conact-number" id="form-label">Contact Number</label>
            <input type="number" name="item[cnum]" placeholder="Enter Contact Number" id="form-input" required>
            <label style="display: block;" for="address" id="form-label">Developer</label>
            <input type="text" id="form-input" placeholder="Name of the Developer" name="item[dev]" required>
            <label style="display: block;" for="date" id="form-label">Date of Bug</label>
            <input type="date" id="form-input" placeholder="Enter the date of Bug" name="item[date]" required>
            <label style="display: block;" for="status" id="form-label">Status of Bug</label>
            <input type="text" id="form-input" placeholder="Enter the status of Bug" name="item[status]" required>
            <br>
            <button type="submit" class="btn btn-lg submit-button">Submit</button></a>
        </form>
    </div>



    <div class="donor-data-heading">
        <h2 style="text-align: center;">
            Records
        </h2>
    </div>
  
    <div class="donor-data container">
      <table class = "item imp">
          <tr>
            <th>Project Name</th>
            <th>Sr. No.</th>
            <th>Bug</th>
            <th>Contact Number</th>
            <th>Developer</th>
            <th>Date</th>
            <th>Status</th>
          </tr>
          <% items.forEach(function(item){ %>
          <tr>
              <td>
              <% if (item.name) { %>
                  <span><h1 style="color: white;"><b><%= item.name %></b></h1></span>
              <% } %>
              </td>
              <td>
              <% if (item.number) { %>
                  <span><h1 style="color: white;"><b><%= item.number %></b></h1></span>
              <% } %>
              </td>
              <td>
              <% if (item.bug) { %>
                  <span><h1 style="color: white;"><b><%= item.bug %></b></h1></span>
              <% } %>
              </td>
              <td>
              <% if (item.cnum) { %>
                  <span><h1 style="color: white;"><b><%= item.cnum %></b></h1></span>
              <% } %>
              </td>
              <td>
              <% if (item.dev) { %>
                  <span><h1 style="color: white;"><b><%= item.dev %></b></h1></span>
              <% } %>
              </td>
              <td>
              <% if (item.date) { %>
                  <span><h1 style="color: white;"><b><%= item.date %></b></h1></span>
              <% } %>
              </td>
              <td>
              <% if (item.status) { %>
                  <span><h1 style="color: white;"><b><%= item.status %></b></h1></span>
              <% } %>
              </td>
          </tr>
           <% }) %>
        </table>
      

</body>

</html>